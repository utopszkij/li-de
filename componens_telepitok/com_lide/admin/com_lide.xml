<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade" version="1.6">
	<name>lide</name>
	<creationDate>2017-06-08</creationDate>
	<author>Fogler Tibor</author>
	<authorEmail>tibor.fogler@gmail.com</authorEmail>
	<authorUrl>http://adatmagus.hu</authorUrl>
	<copyright>Copyright (C) 2017 Fogler Tibor Open Source Matters. All rights reserved.</copyright>	
	<license>GNU/GPL</license>
	<version>1.00</version>
	<description>Likvid demokrácia szoftver. 
	- Csoport szervezés,
	- Vitak, szavazások (borda rendszerü condorcet, likvid demokrácia),
	- Projekt kezelés,
	- Virtualis piactér (szellemi termeéek is)
	- File konyvtár
	- Esemeny naptár
	</description>
	<installfile></installfile>
	<uninstallfile></uninstallfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
			<filename>lide.php</filename>
			<filename>index.html</filename>			
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>views</folder>
			<folder>assets</folder>			
	</files>	
	<languages folder="site">
    	<language tag="hu-HU">language/hu-HU.com_lide.ini</language>            
	</languages>
	<administration>
		<menu link="index.php?option=com_lide">lide</menu>
		<files folder="admin">
			<filename>lide.php</filename>
			<filename>index.html</filename>
			<folder>sql</folder>			
		</files>	
	</administration>
</extension>